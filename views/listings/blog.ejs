<% layout("/layouts/boilerplate") %>
    <h3>All Blogs</h3>
     <div class="row row-cols-lg-3 rows-cols-md-2 row-cols-sm-1">
       <% for(let listing of allListings){ %>
        <a href="/listings/<%= listing._id %>/blog" class="listing-link"> 
            <div class="card col" >
               <img src="<%= listing.BlogImage %>" class="card-img-top" alt="listing_img">
               <div class="card-body">
                 <p class="card-text"> <b><%= listing.BlogTitle %></b>
                 <br>
                 <%= listing.BlogHead %>
                 </p>
               </div>
             </div>
            </a>
       <% } %>
     </div>