<% layout("/layouts/boilerplate") %>

<div class="container">
    <h1 class="agri-hero-text">Government Subsidies for Farmers</h1>

    <div class="row">
     

        <!-- KCC (Kisan Credit Card) Card -->
        <div class="col-md-4">
            <div class="card">
                <img src="https://blog.credgenics.com/wp-content/uploads/2023/10/young-indian-farmer-showing-debit-credit-card-his-green-agriculture-field-min-scaled.jpg" class="card-img-top" alt="KCC">
                <div class="card-body">
                    <h5 class="card-title">Kisan Credit Card (KCC)</h5>
                    <p class="card-text">Provides affordable credit to farmers with low interest rates.</p>
                </div>
            </div>
        </div>

        <!-- PMFBY Card -->
        <div class="col-md-4">
            <div class="card">
                <img src="https://upload.wikimedia.org/wikipedia/en/b/b4/Pradhan_Mantri_Fasal_Bima_Yojana_%28PMFBY%29_logo.png" class="card-img-top" alt="PMFBY">
                <div class="card-body">
                    <h5 class="card-title">Pradhan Mantri Fasal Bima Yojana (PMFBY)</h5>
                    <p class="card-text">Provides insurance cover and financial support to farmers in case of crop failure.</p>
                </div>
            </div>
        </div>
           <!-- PM-KISAN Yojana Card -->
           <div class="col-md-4">
            <div class="card">
                <img src="https://c.ndtvimg.com/2025-02/c3dhktko_pm-kisan_625x300_20_February_25.jpg?im=FeatureCrop,algorithm=dnn,width=545,height=307" class="card-img-top" alt="PM-KISAN Yojana">
                <div class="card-body">
                    <h5 class="card-title">PM-KISAN Yojana</h5>
                    <p class="card-text">Provides income support of Rs. 6,000 per year to small and marginal farmers.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- NABARD Scheme Card -->
        <div class="col-md-4">
            <div class="card">
                <img src="https://i0.wp.com/subsidy4india.com/wp-content/uploads/2023/06/nabard-subsidy.jpg?fit=400%2C400&ssl=1" class="card-img-top" alt="NABARD">
                <div class="card-body">
                    <h5 class="card-title">NABARD Subsidy</h5>
                    <p class="card-text">Offers subsidies for rural development and agricultural growth.</p>
                </div>
            </div>
        </div>

        <!-- Soil Health Card Scheme Card -->
        <div class="col-md-4">
            <div class="card">
                <img src="https://currentaffairs.adda247.com/wp-content/uploads/multisite/sites/5/2023/02/20093650/Soil-Health-Card-Scheme.jpg" class="card-img-top" alt="Soil Health Card">
                <div class="card-body">
                    <h5 class="card-title">Soil Health Card Scheme</h5>
                    <p class="card-text">Provides soil health cards to farmers to help optimize nutrient use.</p>
                </div>
            </div>
        </div>

        <!-- National Horticulture Mission Card -->
        <div class="col-md-4">
            <div class="card">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ1CrG8XwUsc01mQrTScnKgHzwHvhYheyBZXg&s" class="card-img-top" alt="National Horticulture Mission">
                <div class="card-body">
                    <h5 class="card-title">National Horticulture Mission</h5>
                    <p class="card-text">Promotes horticultural growth and provides financial assistance.</p>
                </div>
            </div>
        </div>
    </div>
</div>

